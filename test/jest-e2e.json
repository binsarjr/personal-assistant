{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@app/prisma/(.*)": "<rootDir>/../libs/prisma/src/$1",
    "@app/prisma": "<rootDir>/../libs/prisma/src",
    "@app/whatsapp-api/(.*)": "<rootDir>/../libs/whatsapp-api/src/$1",
    "@app/whatsapp-api": "<rootDir>/../libs/whatsapp-api/src",
    "@app/whatsapp/(.*)": "<rootDir>/../libs/whatsapp/src/$1",
    "@app/whatsapp": "<rootDir>/../libs/whatsapp/src",
    "@app/whatsapp-action/(.*)": "<rootDir>/../libs/whatsapp-action/src/$1",
    "@app/whatsapp-action": "<rootDir>/../libs/whatsapp-action/src",
    "@app/gemini-tools/(.*)": "<rootDir>/../libs/gemini-tools/src/$1",
    "@app/gemini-tools": "<rootDir>/../libs/gemini-tools/src"
  }
}